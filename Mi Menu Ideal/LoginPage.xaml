<Page
    x:Class="Mi_Menu_Ideal.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mi_Menu_Ideal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <StackPanel Padding="10">
            <TextBlock Text="Iniciar Sesión" 
                       Style="{StaticResource HeaderTextBlockStyle}"
                       Margin="0,0,0,150"/>
            
            <TextBox x:Name="usern"
                     PlaceholderText="Usuario"
                     Margin="0,0,0,10"/>
            
            <PasswordBox x:Name="passw"
                     PlaceholderText="Contraseña"
                     Margin="0,0,0,50"/>
            
            <Button Content="Ingresar"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,10" Click="ingresar"/>
            
            <HyperlinkButton Content="Registrar aquí"
                             HorizontalAlignment="Center" Click="regaqui"/>

        </StackPanel>
    </Grid>
</Page>
