<Page x:ConnectionId='1'
    x:Class="Mi_Menu_Ideal.AdminPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mi_Menu_Ideal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:models="using:Mi_Menu_Ideal.Models">

    <Page.BottomAppBar>
        <CommandBar Background="Lavender">
            <CommandBar.PrimaryCommands>
                <AppBarButton x:ConnectionId='2' 
                    Icon="Add"
                    Label="Agregar"                
                    />
                <AppBarButton x:ConnectionId='3'
                    Icon="Edit"
                    Label="Editar"                   
                    />
                <AppBarSeparator/>
                <AppBarButton x:ConnectionId='4'
                    Icon="Delete"
                    Label="Borrar"               
                    />
            </CommandBar.PrimaryCommands>
            <CommandBar.SecondaryCommands>
                <AppBarButton
                    Icon="Contact2"
                    Label="Editar cuenta"
                    />
            </CommandBar.SecondaryCommands>
        </CommandBar>
    </Page.BottomAppBar>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <SplitView x:ConnectionId='5'
            x:Name="split"
            DisplayMode="CompactInline"
            IsPaneOpen="False"
            OpenPaneLength="200"
            CompactPaneLength="50"
            PaneBackground="CornflowerBlue"
            >
            <SplitView.Pane>
                <StackPanel>
                    <Button x:ConnectionId='7' x:Name="btnMenu"  Width="50" Height="50"                 
                            
                            >
                        <StackPanel>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                        </StackPanel>
                    </Button>
                    <ListBox x:ConnectionId='8' x:Name="menu"
                                                            
                             Background="Transparent"
                             Margin="0" Padding="0"
                             ItemContainerStyle="{StaticResource MenuItemStyle}"                              
                             
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate                             >
                                <StackPanel x:ConnectionId='9' Orientation="Horizontal">
                                    <SymbolIcon x:ConnectionId='10'                        
                                                Width="50" Height="50"
                                                Foreground="White"
                                                />
                                    <TextBlock x:ConnectionId='11'                        VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>

                            </DataTemplate>
                        </ListBox.ItemTemplate>


                    </ListBox>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <GridView x:ConnectionId='12' x:Name="grid"
                                                                             >
                    <GridView.ItemTemplate>
                        <DataTemplate                               >
                            <RelativePanel x:ConnectionId='13' Width="220" Height="220" Margin="10">
                                <Rectangle Width="220" Height="220" >
                                    <Rectangle.Fill>
                                        <ImageBrush x:ConnectionId='15'                            Stretch="Uniform"/>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <StackPanel Background="CornflowerBlue"
                                            RelativePanel.AlignBottomWithPanel="True"
                                            Padding="4">
                                    <TextBlock x:ConnectionId='14' Width="220" 
                                                                
                                         Foreground="White"
                                         />
                                </StackPanel>

                            </RelativePanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>

                </GridView>
                
            </SplitView.Content>
            
        </SplitView>
        <Frame x:ConnectionId='6' x:Name="Contenido"/>
    </Grid>
</Page>

