    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

        <SplitView x:ConnectionId='2'
            x:Name="split"
            DisplayMode="CompactInline"
            IsPaneOpen="False"
            OpenPaneLength="200"
            CompactPaneLength="50"
            PaneBackground="OrangeRed"
            >
            <SplitView.Pane>
                <StackPanel>
                    <Button x:ConnectionId='3' x:Name="btnMenu"  Width="50" Height="50"                 
                            
                            >
                        <StackPanel>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                            <Rectangle Fill="White" Width="25" Height="3" Margin="0,0,0,4"/>
                        </StackPanel>
                    </Button>
                    <ListBox x:ConnectionId='4' x:Name="menu"
                                                            
                             Background="Transparent"
                             Margin="0" Padding="0"
                             ItemContainerStyle="{StaticResource MenuItemStyle}"
                             
                             >
                        <ListBox.ItemTemplate>
                            <DataTemplate                             >
                                <StackPanel x:ConnectionId='5' Orientation="Horizontal">
                                    <SymbolIcon x:ConnectionId='6'                        
                                                Width="50" Height="50"
                                                Foreground="White"
                                                /> 
                                    <TextBlock x:ConnectionId='7'                        VerticalAlignment="Center" Foreground="White"/>
                                </StackPanel>
                                
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        
                        
                    </ListBox>
                </StackPanel>
            </SplitView.Pane>
            <SplitView.Content>
                <GridView x:ConnectionId='8' 
                                                                         >
                    <GridView.ItemTemplate>
                        <DataTemplate                               >
                            <RelativePanel x:ConnectionId='9' Width="220" Height="220" Margin="10">
                                <Rectangle Width="220" Height="220" >
                                    <Rectangle.Fill>
                                        <ImageBrush x:ConnectionId='11'                            Stretch="Uniform"/>
                                    </Rectangle.Fill>
                                </Rectangle>

                                <StackPanel Background="OrangeRed"
                                            RelativePanel.AlignBottomWithPanel="True"
                                            Padding="4">
                                <TextBlock x:ConnectionId='10' Width="220" 
                                                                
                                         Foreground="White"
                                         />
                                </StackPanel>

                            </RelativePanel>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                    
                </GridView>
            </SplitView.Content>
        </SplitView>
        
        
    </Grid>
</Page>

